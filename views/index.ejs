<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
  </head>
  <body>
    <% if (locals.user) { %>
    <h1>Hello <%= locals.user.username %></h1>
    <% for (let message of locals.messages) { %>
    <div>
      <h4>Title: <%= message.title %></h4>
      <h4>Text: <%= message.text %></h4>
      <h4>Time: <%= message.time_stamp %></h4>
      <h4>User ID: <%= message.user_id %></h4>
      <% if (locals.user.is_admin === true) { %>
      <form action="/messages/delete/<%= message.id %>" method="POST">
        <button type="submit">Delete Message</button>
      </form>
      <% } %>
    </div>
    <% } %>
    <h3><a href="/messages/new">Create new message</a></h3>
    <% } else { %>
    <h1>Home Page</h1>
    <% for (let message of locals.messages) { %>
    <div>
      <h4>Title: <%= message.title %></h4>
      <h4>Text: <%= message.text %></h4>
    </div>
    <% } %> <% } %>
  </body>
</html>
